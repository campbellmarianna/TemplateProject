extends layout

block content
  .row
    .col-sm-4
      if product.avatarUrl
        img(src=product.avatarUrl + '-square.', alt='Card image cap')
      else
        img.card-img-top(src=product.picUrlSq, alt='Card image cap')
    .col-sm-8
      h1=product.name
      p=product.species
      p #{product.category}
      p=product.description
      .text-right
        a(href="/products/" + product.id + "/edit").btn-link Edit
      
