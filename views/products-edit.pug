extends layout

block content
    
    .row.justify-content-center
        .col-sm-6
            legend New Product
            form(action=`/products/${product._id}?_method=PUT`, method="POST")
                .form-group
                    label Name
                    input.form-control(name="name" value=product.name)
                .form-group
                    label Category
                    input.form-control(name="category" value=product.category)    
                .form-group
                    label Rectangular Image URL
                    input.form-control(name="picUrl" value=product.picUrl) 
                .form-group
                    label Avatar*
                    input.form-control(name="avatar" type="file" required)
                .form-group
                    label Description
                    textarea.form-control(name="description")= product.description
                button(type="submit").btn.btn-primary Save
            .text-right
                form(action=`/products/${product._id}?_method=DELETE`, method="POST")
                    button(type="submit").btn.btn-danger Remove
